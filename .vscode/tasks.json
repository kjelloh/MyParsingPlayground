{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "cppbuild",
      "label": "macOS C/C++: Brew installed clang-16 build active file",
      "command": "/usr/local/Cellar/llvm/16.0.2/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-std=c++20",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/local/Cellar/llvm/16.0.2/bin/clang++"
    }
  ]
}